<Entity name="$projectile_default" >

	<Base file="data/entities/base_projectile.xml" >
    <VelocityComponent
      gravity_y="300"
      air_friction="0"
	    mass="0"
      liquid_drag="0"
	  >
    </VelocityComponent>
	</Base>

  <ProjectileComponent 
    _enabled="1" 
    lob_min="0.5"
    lob_max="0.7"
    speed_min="70"
    speed_max="70"
    direction_random_rad="0.00"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0" 
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="1"
    on_collision_die="1"
    lifetime="180"
    lifetime_randomness="80"
    damage="0.32"
    velocity_sets_scale="0"
    velocity_sets_rotation="0"
    ragdoll_force_multiplier="0.005"
    hit_particle_force_multiplier="0.1"
    knockback_force="0"
    collide_with_world="1"
    penetrate_world="1"
    penetrate_world_velocity_coeff="1"
    >
    <config_explosion
      never_cache="1"
      damage="0"
      camera_shake="2.0"
      explosion_radius="12"
      explosion_sprite="mods/boss_reworks/files/boss_gate/glyph_out.xml" 
      explosion_sprite_lifetime="0" 
      explosion_sprite_emissive="1"
      create_cell_probability="0"
	    explosion_sprite_additive="1"
      hole_destroy_liquid="0" 
      hole_enabled="1" 
      ray_energy="1300000"
      particle_effect="0" 
      damage_mortals="1"
	    physics_explosion_power.min="0.1" 
      physics_explosion_power.max="0.3" 
      physics_throw_enabled="1" 
      shake_vegetation="1" 
      sparks_count_max="1" 
      sparks_count_min="3" 
      sparks_enabled="1" 
      material_sparks_enabled="0"
      light_enabled="0" 
      stains_enabled="0"
	    spark_material="spark_red"
      max_durability_to_destroy="13"
	  >
    </config_explosion>
  </ProjectileComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/boss_reworks/files/boss_gate/glyphs/rock_a.png" 
    next_rect_animation="fireball"
    rect_animation="fireball"
	  emissive="1"
    offset_x="4.5"
    offset_y="5"
    >
  </SpriteComponent>

  <SpriteParticleEmitterComponent
    additive="1"
    render_back="0"
    sprite_centered="1"
    emissive="0"
    z_index="1"
    sprite_file="mods/boss_reworks/files/boss_gate/glyphs/rock_glow.png"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    count_min="1" count_max="1"
    lifetime="0.25"
    color.r="1" color.g="1" color.b="1" color.a="0.75"
    color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="-3"
    velocity.x="0" velocity.y="-10"
    gravity.x="0" gravity.y="0"
    use_rotation_from_entity="1"
    scale.x="1" scale.y="1"
    scale_velocity.x="0" scale_velocity.y="0"
    >
  </SpriteParticleEmitterComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.bank"
      event_root="player_projectiles/bullet_heavy_fast">
  </AudioComponent>
  
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/boss_reworks/files/boss_gate/glyph_shot.xml"
		>
	</VariableStorageComponent>

</Entity>