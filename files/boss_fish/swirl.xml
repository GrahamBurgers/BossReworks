<Entity name="$projectile_default" tags="projectile_player" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
			gravity_y="0"
			air_friction="0"
			mass="0.05"
			liquid_drag="0"
			displace_liquid="0"
			>
		</VelocityComponent>
	</Base>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="0.5"
		lob_max="0.7"
		speed_min="70"
		speed_max="70"
		friction="1"
		direction_random_rad="0.00"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="1"
		damage_game_effect_entities="mods/boss_reworks/files/boss_fish/sink.xml,"
		collide_with_world="0"
		on_collision_die="1"
		lifetime="80"
		damage="0.12"
		velocity_sets_scale="0"
		lifetime_randomness="0"
		ragdoll_force_multiplier="0.005"
		hit_particle_force_multiplier="0.1"
		knockback_force="0"
		collide_with_tag="player_unit"
		>
		<config_explosion
		never_cache="1" 
		damage="0.0"
		camera_shake="0.5" 
		explosion_radius="2" 
		explosion_sprite="" 
		explosion_sprite_lifetime="0" 
		create_cell_probability="0" 
		hole_destroy_liquid="0" 
		hole_enabled="1" 
		ray_energy="400000"
		max_durability_to_destroy="8"
		particle_effect="0" 
		damage_mortals="0"
		physics_explosion_power.min="0.22"
		physics_explosion_power.max="0.3" 
		physics_throw_enabled="1" 
		shake_vegetation="1" 
		sparks_count_max="20" 
		sparks_count_min="7" 
		sparks_enabled="0"  
		material_sparks_enabled="1"
		material_sparks_count_max="2"
		material_sparks_count_min="0" 
		light_enabled="0" 
		stains_enabled="1"
		stains_radius="3" >
		</config_explosion>
	</ProjectileComponent>

	<LuaComponent
		script_source_file="mods/boss_reworks/files/boss_fish/swirl_enable.lua"
		execute_every_n_frame="30"
		remove_after_executed="1"
	></LuaComponent>

	<SpriteComponent 
		image_file="mods/boss_reworks/files/boss_fish/swirl.png"
		offset_x="3"
		offset_y="3.5"
		>
	</SpriteComponent>

	<SpriteParticleEmitterComponent
		additive="1"
		render_back="0"
		sprite_centered="0"
		emissive="0"
		z_index="1"
		sprite_file="mods/boss_reworks/files/boss_fish/swirl_trail.xml"
		emission_interval_min_frames="5"
		emission_interval_max_frames="5"
		count_min="1" count_max="1"
		lifetime="0.36"
		color.r="1" color.g="1" color.b="1" color.a="1"
		color_change.r="0" color_change.g="0" color_change.b="0" color_change.a="0"
		velocity.x="0" velocity.y="0"
		gravity.x="0" gravity.y="0"
		use_rotation_from_entity="0"
		scale.x="0.6" scale.y="0.6"
		scale_velocity.x="0" scale_velocity.y="0"
		>
	</SpriteParticleEmitterComponent>

	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="player_projectiles/bullet_light">
	</AudioComponent>

	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/boss_reworks/files/boss_fish/swirl.xml"
		>
	</VariableStorageComponent>

</Entity>