<Entity tags="br_effect_projectile,resist_repulsion" name="$projectile_default" >

	<Base file="data/entities/base_projectile.xml" >
		<VelocityComponent
    		gravity_y="0"
			air_friction="-0.1"
			mass="0.05"
			liquid_drag="0"
			displace_liquid="0"
			>
    	</VelocityComponent> 
	</Base>
	
	<HomingComponent
		target_tag="player_unit"
		homing_targeting_coeff="7"
		detect_distance="350"
		homing_velocity_multiplier="1.0"
		>
	</HomingComponent>

	<ProjectileComponent 
		_enabled="1" 
		lob_min="1"
		lob_max="1.0"
		speed_min="120"
		speed_max="120"
		die_on_low_velocity="0"
		on_death_explode="1"
		on_death_gfx_leave_sprite="0" 
		on_lifetime_out_explode="1"
		explosion_dont_damage_shooter="1"
		damage="1"
		on_collision_die="0"
		penetrate_entities="1"
		penetrate_world="1"
		penetrate_world_velocity_coeff="1"
		collide_with_entities="0"
		lifetime="90" >
		<config_explosion
		never_cache="1" 
		camera_shake="0.5" 
		explosion_radius="1" 
		explosion_sprite="data/particles/explosion_016_plasma.xml" 
		explosion_sprite_lifetime="0.0" 
		create_cell_probability="1" 
		create_cell_material="plasma_fading" 
		ray_energy="10000"
		hole_destroy_liquid="1" 
		hole_enabled="1" 
		damage = "0"
		hole_image="data/temp/explosion_hole.png"
		explosion_sprite_emissive="1"
		explosion_sprite_additive="1"
		particle_effect="0" 
		damage_mortals="1"
		physics_explosion_power.min="0"
		physics_explosion_power.max="0"
		physics_throw_enabled="0"
		shake_vegetation="1"  
		sparks_enabled="1" 
		spark_material="plasma_fading"
		sparks_count_max="16" 
		sparks_count_min="12"
		light_fade_time="1.2" 
		light_r="35"
		light_g="135"
		light_b="140"
		stains_enabled="1" 
		stains_image="data/temp/explosion_stain.png" >
		</config_explosion>
	</ProjectileComponent>

	<SpriteComponent 
		_enabled="1" 
		alpha="1" 
		image_file="mods/boss_reworks/files/boss_wizard/effect_orb_anim.xml"
		next_rect_animation="" 
		offset_x="0" 
		offset_y="0" 
		rect_animation="fireball" 
		emissive="1"
		additive="1"
		update_transform_rotation="0"
		>
	</SpriteComponent>

	<LightComponent 
		_enabled="1" 
		radius="150" 
		r="40"
		g="18"
		b="220">
	</LightComponent>
	
	<AudioComponent
		file="data/audio/Desktop/projectiles.bank"
		event_root="projectiles/magic" >
	</AudioComponent>
	
	<AudioLoopComponent
		file="data/audio/Desktop/projectiles.bank"
		event_name="projectiles/magic_orb/loop"
		auto_play="1">
	</AudioLoopComponent>
	
	<VariableStorageComponent
		name="projectile_file"
		value_string="mods/boss_reworks/files/boss_wizard/effect_orb.xml"
		>
	</VariableStorageComponent>
</Entity>